source 'https://rubygems.org'

gem 'rails', '~> 4.2.6'

gem 'haml'
gem 'haml-rails'

gem 'rack-proxy'

group :production do
  gem 'mysql2'
end

gem 'tzinfo-data'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'

  gem 'therubyracer'

  gem 'uglifier'
end

group :development do
  gem 'sqlite3'
end

gem 'unicorn'
