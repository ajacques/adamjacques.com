#!/usr/bin/env ruby

require 'aws-sdk-s3'
require 'json'
require 'net/http'

bucket = Aws::S3::Resource.new
  .bucket(ENV['S3_BUCKET_NAME'])

def get_assets
  files = JSON.parse(File.read('public/packs/manifest.json'))
  files.values
end

def upload_asset(bucket, file)
  mimes = {
    '.js' => 'application/javascript',
    '.css' => 'text/css'
  }
  mime = mimes[File.extname(file)]
  bucket.object("web_content/assets#{file}")
    .upload_file("./public#{file}", cache_control: 'max-age=31556926', content_type: mime)
end

def get_http
  url = URI.parse(ENV['URI'])
  Net::HTTP.get(url)
end

get_assets.map do |file|
  upload_asset(bucket, file)
end

bucket.object('web_content/index.html').put(
  body: get_http,
  cache_control: 'max-age=3600',
  content_type: 'text/html'
)
