!!!
%html
  %head
    %title= full_name
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application', async: true
    = yield :head
    %meta{charset: 'utf-8'}/
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0', name: 'viewport'}/
    %meta{content: 'text/html;charset=UTF-8', 'http-equiv' => 'Content-type'}/
    %meta{content: 'true', name: 'HandheldFriendly'}/
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{content: 'noarchive', name: 'robots'}/
    %meta{content: Rails.application.appconfig.analytics['beacon_url'], name: 'beacon_url'}
    %meta{content: Rails.application.appconfig.analytics['site_id'], name: 'beacon_site_id'}
  %body
    #total.centered
      #header
        .name
          .headname= full_name
          .subname.noprint online résumé
          - if Rails.env.development? then
            .subname.noprint DEVELOPMENT ENVIRONMENT
        #menu-container.noprint
          .menu
            %ul
              %li
                = link_to 'Résumé', index_path
              %li
                = link_to 'Contact Me', contact_me_path
      #body-container
        = yield
    #footer &copy; #{Time.now.year} #{full_name}
